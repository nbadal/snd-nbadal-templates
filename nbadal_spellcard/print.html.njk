<style>
  @font-face {
    font-family: "nodesto-condensed";
    src: url('/proxy/https://github.com/jonathonf/solbera-dnd-fonts/raw/master/Nodesto%20Caps%20Condensed/Nodesto%20Caps%20Condensed.otf') format("opentype");
    font-weight: normal;
  }

  @font-face {
    font-family: "Scaly Sans";
    src: url('/proxy/https://github.com/jonathonf/solbera-dnd-fonts/raw/master/Scaly%20Sans/Scaly%20Sans.otf') format("opentype");
    font-weight: normal;
  }

  .CardFront {
    width: auto;
    border-radius: 8px;
  }

  .CardContent {
    padding: 10px 10px 6px 10px;

    font-family: "Scaly Sans", serif;
    font-style: normal;
    font-weight: 300;
  }

  .Title {
    padding: 2px 8px;
    background-color: #e8ebec;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-size: 2rem;
    line-height: 2rem;
    font-family: "nodesto-condensed", serif;
    font-weight: normal;
    font-style: normal;
    text-transform: uppercase;
    text-align: center;
  }

  .Subtitle {
    padding: 4px;
    text-align: center;
    color: #e8ebec;
    font-size: 1.15rem;
    line-height: 1.15rem;
  }

  .StatsTable {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 2px;
    width: 100%;
    margin-bottom: 4px;
    border-collapse: collapse;
  }

  .StatCell {
    background-color: #e8ebec;
    border: 0 solid transparent;
    background-clip: padding-box;
    padding: 2px;
  }

  .CellContent {
    display: grid;
    grid-template-columns: 1rem auto 1rem;
    justify-items: center;
    align-items: center;
  }

  .StatsTitle {
    grid-row: 1;
    grid-column: 1/4;
    text-align: center;
    font-size: 1.5rem;
    line-height: 1.5rem;
    font-family: "nodesto-condensed", serif;
    font-weight: normal;
    font-style: normal;
    text-transform: uppercase;
  }

  .StatsValue {
    grid-row: 2;
    grid-column: 1/4;
    text-align: center;
    font-size: 1rem;
    line-height: 1rem;
  }

  .StatsValue::first-letter {
    text-transform: capitalize;
  }

  .StatsBadge {
    grid-row: 1/3;
    grid-column: 3;
    position: relative;
    z-index: 0;
    height: 1.75rem;
    width: 1.15rem;
    font-family: "nodesto-condensed", serif;
    font-size: 1rem;
    line-height: 1.85rem;
    text-align: center;
    color: #e8ebec;
  }

  .StatsBadge svg {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
  }

  .DetailsContainer {
    overflow: auto;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .DetailsContainer :first-child {
    padding-top: 8px;
  }

  .DetailsContainer :last-child {
    padding-bottom: 8px;
  }

  .DetailsBlock {
    padding: 3px 8px;
    background-color: #e8ebec;
    font-size: 1.15rem;
    line-height: 1.25rem;
  }

  .Header {
    padding: 4px;
    text-align: center;
    color: #e8ebec;
    font-size: 1rem;
    line-height: 1rem;
  }

  .Header~.DetailsBlock {
    padding-top: 8px;
  }

  .CardFooter {
    margin-top: 2px;
    display: flex;
    justify-content: space-between;
    color: #e8ebec;
    font-size: 1.25rem;
    line-height: 1.25rem;
    font-weight: bold;
  }

  .Category {
    font-size: 1.25rem;
    line-height: 1.25rem;
    font-family: "nodesto-condensed", serif;
    font-weight: normal;
    font-style: normal;
    text-align: center;
  }
</style>
{% set color = "black" %}
<div class='CardFront' style="background-color: {{ color }}">
  <div class='CardContent'>
    <div class="Title">
      {{ it.name }}
    </div>
    <div class="Subtitle">{% if it.level!="Cantrip" %}{{ it.level }} {% endif %}{{ it.school }}{% if it.level=="Cantrip"
      %} Cantrip{% endif %}</div>
    <div class="StatsTable">
      <div class="StatCell">
        <div class="CellContent">
          <div class="StatsTitle" style="color: {{ color }}">
            CASTING TIME
          </div>
          <div class="StatsValue">{{ it.casting_time }}</div>
        </div>
      </div>
      <div class="StatCell">
        <div class="CellContent">
          <div class="StatsTitle" style="color: {{color}}">
            RANGE
          </div>
          <div class="StatsValue">{{ it.range }}</div>
        </div>
      </div>
      <div class="StatCell">
        <div class="CellContent">
          <div class="StatsTitle" style="color: {{color}}">
            COMPONENTS
          </div>
          <div class="StatsValue">{{ it.components }}</div>
        </div>
      </div>
      <div class="StatCell">
        <div class="CellContent">
          <div class="StatsTitle" style="color: {{color}}">
            DURATION
          </div>
          <div class="StatsValue">{{ it.duration }}</div>
          {% if it.concentration == "yes" %}
          <div class="StatsBadge">
            <svg viewBox='0 0 2 2' preserveAspectRatio='none'>
              <path d='M0,1 1,0 2,1 1,2z' fill="{{color}}" />
            </svg>
            C
          </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="DetailsContainer">
      <div class="DetailsBlock">
        {% if it.material %}Material: {{ it.material }}<br /><br />{% endif %}
        {{ it.desc | replace(r/\*\*([^\*]*)\*\*/g, '<strong>$1</strong>') | replace(r/\n[-\*] /g, '\nâ€¢ ') | nl2br | safe }}
      </div>
      {% if it.higher_level %}
      <div class="Header">At Higher Levels</div>
      <div class="DetailsBlock">
        {{ it.higher_level }}
      </div>
      {% endif %}
    </div>
    <div class="CardFooter">
      <div class="Category">{{ it.archetype | replace('<br/>',',') }}</div>
      <div>{{ it.page }}</div>
    </div>
  </div>
</div>